general {
        output_format= "i3bar"
        colors = true
        interval = 5
}

order += "read_file spotify"
#order += "battery all"
order += "disk /"
order += "memory"
order += "wireless _first_"
order += "tztime local"
order += "volume master"

wireless _first_ {
        #format_up = "W: (%quality at %essid) %ip"
        format_up = "📶 %quality at %essid"
        format_down = "🚫: down"
}

battery all {

        format = "%status/%percentage/%remaining"
}

disk "/" {
        format = "💾 %free"
}



memory {
        format = "📈 %used 🧠 %total"
        threshold_degraded = "10%"
        format_degraded = "⚠️ %free"
}

tztime local {
        format = "📅 %a, %d-%m-%Y 🕒 %H:%M:%S"
}

volume master {
        format = "🔊 %volume"
        format_muted = "🔇"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

read_file spotify {
    format = "♪ %content"
    path = "~/logs/spotify.log"
}
